---
// Select UI to switch between locales.

import { getLocalePaths, LOCALES } from "@/i18n";

const FLAGS: Record<string, string> = { es: "ðŸ‡ªðŸ‡¸", en: "ðŸ‡ºðŸ‡¸", pt: "ðŸ‡µðŸ‡¹" };
---

<div class="language-selector">
  <select data-languageSelect>
    {
      getLocalePaths(Astro.url).map(({ path, lang }) => (
        <option
          value={path}
          data-lang={lang}
          selected={lang === Astro.currentLocale}
          dir={LOCALES[lang].dir || null}
        >{FLAGS[lang]}</option>
      ))
    }
  </select>
  <span class="dropdown-icon">â–¼</span>
</div>

<script is:inline>
  const selects = document.querySelectorAll("[data-languageSelect]");

  selects.forEach((select) => {
    select.addEventListener("change", (event) => {
      // used for 404 page
      localStorage.selectedLang = event.target?.selectedOptions[0].dataset.lang;
      location.href = event.target?.value;
    });
  });
</script>

<style>
  /* Ultra minimalist language selector - flags only */
  .language-selector {
    position: relative;
    display: flex;
    align-items: center;
  }
  
  select[data-languageSelect] {
    background: transparent;
    border: 0;
    color: inherit;
    font-size: 1.2rem;
    padding: 0.375rem 1.5rem 0.375rem 0.5rem;
    cursor: pointer;
    border-radius: 6px;
    transition: all 0.2s ease;
    appearance: none;
    -webkit-appearance: none;
    -moz-appearance: none;
    outline: none;
  }
  
  select[data-languageSelect]:hover {
    background: rgba(255, 255, 255, 0.1);
  }
  
  select[data-languageSelect]:focus {
    background: rgba(255, 255, 255, 0.1);
  }
  
  .dropdown-icon {
    position: absolute;
    right: 0.25rem;
    top: 50%;
    transform: translateY(-50%);
    font-size: 0.6rem;
    opacity: 0.7;
    pointer-events: none;
    transition: opacity 0.2s ease;
  }
  
  .language-selector:hover .dropdown-icon {
    opacity: 1;
  }
  
  option {
    background: #fff;
    color: #333;
    font-size: 1.1rem;
    padding: 0.5rem;
  }
  
  option:checked {
    background: #4a6cf7;
    color: #fff;
  }
  
  /* Hide default select arrow */
  select[data-languageSelect]::-ms-expand {
    display: none;
  }
</style>
